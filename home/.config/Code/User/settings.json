{
    "workbench.colorTheme": "Visual Studio Dark",
    "editor.fontSize": 16,
  // Controls the font size in pixels of the terminal.
    "terminal.integrated.fontSize": 16,

    "vim.useSystemClipboard": true,
    "editor.cursorBlinking": "solid",

    "files.exclude": {
      "**/.git": true,
      "**/*.egg-info": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true
    },
    "window.zoomLevel": 0,
}