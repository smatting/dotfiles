Config { -- font = "-misc-fixed-*-*-*-*-14-*-*-*-*-*-*-*"
        font = "xft:Fira Code-11pt, Noto Color Emoji"
       , additionalFonts = []
       , borderColor = "black"
       , border = TopB
       , bgColor = "#222222"
       , fgColor = "#EEEEEE"
       , alpha = 255
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Weather "EGPF" ["-t","<station>: <tempC>C",
                                          "-L","18","-H","25",
                                          "--normal","green",
                                          "--high","red",
                                          "--low","lightblue"] 36000
                    , Run Network "eth0" ["-L","0","-H","32",
                                          "--normal","green","--high","red"] 10
                    , Run Network "eth1" ["-L","0","-H","32",
                                          "--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50",
                               "--normal","gray","--high","red"] 50
                    , Run Memory ["-t","Mem: <usedratio>%"] 50
                    , Run Swap [] 10
                    , Run Com "uname" ["-s","-r"] "" 36000
                    , Run Date "%Y-%m-%d %H:%M" "date" 10
                    , Run Com "env" ["TZ=Europe/Berlin", "date", "+%a %m-%d %H:%M"] "customdate" 100
                    , Run Com "env" ["TZ=Australia/Brisbane", "date", "+%H:%M"] "time_australia" 100
                    , Run Battery [
                        "-t", "<acstatus>: <left>% - <timeleft>",
                        "--",
                        --"-c", "charge_full",
                        "-O", "AC",
                        "-o", "Bat",
                        "-h", "green",
                        "-l", "red"
                        ] 10
                    , Run Com "python3" ["/home/stefan/repos/scripts/bin/status.py"] "status" 50
                    , Run Com "python3" ["/home/stefan/repos/scripts/bin/animal.py"] "animal" 36000
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %animal% %customdate% (Berlin), %time_australia% (Australia) ∙ %cpu% ∙ %memory% ∙ %battery% ∙ %status% }{"
       }
